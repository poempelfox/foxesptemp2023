body{background-color:#000;color:#ccc}table,th,td{border:1px solid #aaf;border-collapse:collapse;padding:5px}th{text-align:left}td{text-align:right}a:link,a:visited,a:hover{color:#ccf}div#adminloginbut{align:right;padding:3px;margin:3px;float:right;background-color:#300;color:#aa0;border:1px solid #aa0;border-radius:3px}div#adminloginform{display:none;background-color:#300;color:#aa0;border:3px solid #aa0;position:fixed;top:50%;left:50%;margin-right:-50%;transform:translate(-50%,-50%);padding:20px}div#adminloginform:target{display:block}div#settingsresult{display:none;background-color:#600;color:#cc0;border:1px solid gray;padding:8px;text-align:left;position:fixed;top:10%;left:10%;margin-right:10%;width:80%}